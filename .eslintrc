{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": ["error", 4],
    "no-console": "off",
    "no-unused-vars": "off",
    "react/prop-types": "off"
  },
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}